<% include ../partials/header %>


<div class="container">
    <div class= row>
        <h1 style="text-align:center">Create a new comment to <%=campground.name %></h1>
        <div style="width:30%; margin: 25px auto">
            <form action = "/campground/<%= campground._id %>/comment/" method = "POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="text" name = "comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campground">GO Back!</a>
        </div>
        
    </div>
    
</div>




